@model kayialp.ViewModels.Blog.BlogShowcaseViewModel

<section class="position-relative bg-top-center overflow-hidden space" id="blog-sec"
    data-bg-src="/img/bg/service_bg_1.jpg">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="title-area service-title-box text-center">
                    <span class="sub-title mb-15  text-anime-style-2">@Model.SubTitle</span>
                    <h2 class="sec-title  text-anime-style-2">@Model.Title</h2>
                    @if (!string.IsNullOrWhiteSpace(Model.Paragraph))
                    {
                        <p class="sec-text mb-50 wow fadeInUp" data-wow-delay=".4s">@Model.Paragraph</p>
                    }
                </div>
            </div>
        </div>

        <div class="slider-area slider-drag-wrap">
            <div class="swiper th-slider has-shadow"
                data-slider-options='{"breakpoints":{"0":{"slidesPerView":1},"576":{"slidesPerView":"1"},"768":{"slidesPerView":"2"},"992":{"slidesPerView":"2"},"1200":{"slidesPerView":"3"},"1300":{"slidesPerView":"4"}}}'>
                <div class="swiper-wrapper">
                    @foreach (var item in Model.Items)
                    {
                        <div class="swiper-slide">
                            <div class="service-box service-style-1 gsap-cursor">
                                <div class="service-img">
                                    <a href="@item.LinkUrl">
                                        <img src="@item.ImageUrl" alt="@item.ImageAlt">
                                    </a>
                                </div>
                                <div class="service-content">
                                    <h3 class="box-title"><a href="@item.LinkUrl">@item.Title</a></h3>
                                    @if (!string.IsNullOrWhiteSpace(item.Excerpt))
                                    {
                                        <p class="service-box_text">@item.Excerpt</p>
                                    }
                                    <a class="th-btn style4" href="@item.LinkUrl">
                                        @Model.ReadMore <i class="fa-light fa-arrow-right-long"></i>
                                    </a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>