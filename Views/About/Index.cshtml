@{
    ViewData["Title"] = "About";
    Layout = "/Views/Shared/_Layout.cshtml";
    var currentCulture = System.Globalization.CultureInfo.CurrentCulture.TwoLetterISOLanguageName;
    var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
}
<!--==============================
    Breadcumb
============================== -->
<div class="breadcumb-area ">
    <div class="breadcumb-wrapper" data-bg-src="/img/bg/breadcumb-bg.jpg">
        <div class="container">
            <div class="breadcumb-content">
                <h1 class="breadcumb-title"> @Html.Localize("pages.layout.about")</h1>
                <ul class="breadcumb-menu">
                    <li><a href="/"> @Html.Localize("pages.layout.index")</a></li>
                    <li> @Html.Localize("pages.layout.about")</li>
                </ul>
            </div>
        </div>
    </div>
</div>
<!--==============================
History Area
==============================-->
<div class="history-sec1 space  overflow-hidden space-bottom" id="story-sec">
    <div class="container">
        <div class="col-lg-8 col-md-10"></div>
        <div class="title-area text-center">
            <span class="sub-title"><span
                    class="squre-shape left me-3"></span>@Html.Localize("pages.about.history_subtitle")<span
                    class="squre-shape right ms-3"></span></span>
            <h2 class="sec-title mb-20">
                <span class="scroll-text-ani">@Html.Localize("pages.about.slogan")</span>
            </h2>
        </div>
    </div>
    <div class="row gy-4 justify-content-center">
        <div class="col-xl-4 col-md-6">
            <div class="story-box inner-style">
                <span class="story-box_icon">
                    <img src="/img/icon/history_1_1.svg" alt="">
                </span>
                <h3 class="box-title">@Html.Localize("pages.about.mission_title")</h3>
                <p class="story-box_text mb-0"> @Html.Localize("companyinfo.missionHtml")

                </p>
            </div>
        </div>

        <div class="col-xl-4 col-md-6">
            <div class="story-box inner-style">
                <span class="story-box_icon">
                    <img src="/img/icon/history_1_2.svg" alt="">
                </span>
                <h3 class="box-title">@Html.Localize("pages.about.vision_title")</h3>
                <p class="story-box_text mb-0">@Html.Localize("companyinfo.visionHtml")</p>
            </div>
        </div>

        <div class="col-xl-4 col-md-6">
            <div class="story-box inner-style">
                <span class="story-box_icon">
                    <img src="/img/icon/history_1_3.svg" alt="">
                </span>
                <h3 class="box-title">@Html.Localize("pages.about.aboutus_title")</h3>
                <p class="story-box_text mb-0">@Html.Localize("companyinfo.aboutHtml")</p>
            </div>
        </div>
    </div>
</div>
</div>

<!--==============================
Faq Area
==============================-->
<div class="position-relative space overflow-hidden" id="faq-sec">
    <div class="container">
        <div class="row gy-4 align-items-center justify-content-between">
            <div class="col-xl-4 col-lg-4">
                <div class="title-area mb-30">
                    <span class="sub-title">@Html.Localize("pages.about.faq_section_subtitle")</span>
                    <h2 class="sec-title">@Html.Localize("pages.about.faq_section_title")</h2>
                </div>
                <p class="sec-text">@Html.Localize("pages.about.faq_section_paragraph1")</p>

                <p class="sec-text">@Html.Localize("pages.about.faq_section_paragraph2")</p>
                <div class="faq4-form mt-30">
                    <form action="mail.php" method="POST" class="contact-form ajax-contact">
                        <h3 class="sec-title mb-25">@Html.Localize("pages.about.form_title")</h3>
                        <div class="row">
                            <div class="col-12 form-group">
                                <input type="text" class="form-control" name="name" id="name3"
                                    placeholder="@Html.Localize("pages.about.form_name_placeholder")">
                                <img src="/img/icon/user.svg" alt="">
                            </div>
                            <div class="col-12 form-group">
                                <input type="text" class="form-control" name="email" id="email" placeholder="@Html.Localize("pages.about.form_email_placeholder")">
                                <img src="/img/icon/mail.svg" alt="">
                            </div>
                            <div class="form-group col-12">
                                <textarea name="message" id="message" cols="30" rows="3" class="form-control"
                                    placeholder="@Html.Localize("pages.about.form_message_placeholder")"></textarea>
                                <img src="/img/icon/chat.svg" alt="">
                            </div>
                            <div class="form-btn col-12">
                                <button type="submit" class="th-btn style3">@Html.Localize("pages.about.form_submit_text")</button>
                            </div>
                        </div>
                        <p class="form-messages mb-0 mt-3"></p>
                    </form>
                </div>
            </div>
            <div class="col-xl-8 col-lg-8">
                <div class="ps-xl-5 ms-xl-4">
                    @await Component.InvokeAsync("FaqList")
                </div>
            </div>
        </div>
    </div>

</div>