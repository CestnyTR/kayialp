@model kayialp.ViewModels.CreateCategoryViewModel
@{
    Layout = "/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Yeni Kategori";
}

<h1 class="h3 mb-2 text-gray-800">Yeni Kategori</h1>

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Kategori Oluştur</h6>
    </div>
    <div class="card-body">
        <form asp-action="CreateCategory" method="post">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Name" class="control-label">Kategori Adı</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Order" class="control-label">Sıra</label>
                <input asp-for="Order" class="form-control" type="number" />
                <span asp-validation-for="Order" class="text-danger"></span>
            </div>

            <input type="hidden" asp-for="LangCodeId" value="@Model.LangCodeId" />
            <p class="text-muted">Dil: Türkçe (ID: @Model.LangCodeId)</p>

            <div class="form-group mt-3">
                <a href="/Admin/Index" class="btn btn-secondary">Geri</a>
                <button type="submit" class="btn btn-primary">Kaydet</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

