@model kayialp.ViewModels.UpdateCategoryViewModel
@{
    Layout = "/Views/Shared/_AdminLayout.cshtml";
}

<h1 class="h3 mb-3">Kategori Güncelle (#@Model.Id)</h1>

<form asp-action="UpdateCategory" asp-route-id="@Model.Id" method="post">
    @Html.AntiForgeryToken()

    <div class="card mb-4">
        <div class="card-body">
            <div class="form-row">
                <div class="form-group col-md-3">
                    <label>Order</label>
                    <input asp-for="Order" type="number" class="form-control" />
                    <span asp-validation-for="Order" class="text-danger"></span>
                </div>
                <div class="form-group col-md-9">
                    <label>KeyName (EN camelCase)</label>
                    <input asp-for="KeyName" class="form-control" readonly />
                    <small class="form-text text-muted">
                        EN metinden türetilir. İstersen “EN’den yeniden üret” işaretli olsun.
                    </small>
                </div>
            </div>

            <div class="form-check mt-2">
                <input asp-for="RegenerateKeyNameFromEnglish" class="form-check-input" type="checkbox" id="regenKey" />
                <label class="form-check-label" for="regenKey">Kaydederken KeyName’i EN’den yeniden üret</label>
            </div>
            <div class="form-check">
                <input asp-for="RegenerateEmptySlugs" class="form-check-input" type="checkbox" id="regenSlugs" />
                <label class="form-check-label" for="regenSlugs">Boş bıraktığım slug’ları otomatik üret</label>
            </div>
        </div>
    </div>

    <!-- Dil sekmeleri -->
    <ul class="nav nav-tabs" id="langTab" role="tablist">
        @for (int i = 0; i < Model.Translations.Count; i++)
        {
            var active = i == 0 ? "active" : "";
            <li class="nav-item" role="presentation">
                <a class="nav-link @active" id="tab-@i"  data-bs-toggle="tab" href="#pane-@i" role="tab" aria-controls="pane-@i" aria-selected="@(i==0)">
                    @Model.Translations[i].LangDisplay
                </a>
            </li>
        }
    </ul>

    <div class="tab-content border-left border-right border-bottom p-3" id="langTabContent">
        @for (int i = 0; i < Model.Translations.Count; i++)
        {
            var active = i == 0 ? "show active" : "";
            <div class="tab-pane fade @active" id="pane-@i" role="tabpanel" aria-labelledby="tab-@i">
                @* gizli alanlar *@
                <input type="hidden" asp-for="Translations[@i].LangId" />
                <input type="hidden" asp-for="Translations[@i].LangCode" />
                <input type="hidden" asp-for="Translations[@i].LangDisplay" />

                <div class="form-group">
                    <label asp-for="Translations[@i].ValueText">Ad (@Model.Translations[i].LangDisplay)</label>
                    <input asp-for="Translations[@i].ValueText" class="form-control" />
                    <span asp-validation-for="Translations[@i].ValueText" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Translations[@i].Slug">Slug (@Model.Translations[i].LangDisplay)</label>
                    <input asp-for="Translations[@i].Slug" class="form-control" />
                    <small class="form-text text-muted">
                        Boş bırakırsan kaydederken otomatik üretilecek (Unicode, diline uygun).
                    </small>
                    <span asp-validation-for="Translations[@i].Slug" class="text-danger"></span>
                </div>
            </div>
        }
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Kaydet</button>
        <a asp-action="Index" class="btn btn-secondary">İptal</a>
    </div>
</form>

@section Scripts {
  <script>
    document.addEventListener('DOMContentLoaded', function () {
      if (window.bootstrap && typeof bootstrap.Tab === 'function') {
        // BS5
        document.querySelectorAll('#langTab a[data-bs-toggle="tab"]').forEach(function (a) {
          a.addEventListener('click', function (e) { e.preventDefault(); new bootstrap.Tab(a).show(); });
        });
        if (!location.hash) new bootstrap.Tab(document.querySelector('#langTab a')).show();
      } else if (window.jQuery && $.fn && $.fn.tab) {
        // BS4
        $('#langTab a[ data-bs-toggle="tab"]').on('click', function (e) { e.preventDefault(); $(this).tab('show'); });
        if (!location.hash) { $('#langTab a[ data-bs-toggle="tab"]').first().tab('show'); }
      }
    });
  </script>
}
