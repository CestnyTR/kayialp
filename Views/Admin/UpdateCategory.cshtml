@using kayialp.ViewModels
@model UpdateCategoryViewModel
@{
    ViewData["Title"] = "Kategori Düzenle";
    Layout = "/Views/Shared/_AdminLayout.cshtml";
}

<h1 class="h3 mb-3">Kategori Düzenle</h1>

<form asp-action="UpdateCategory" method="post" enctype="multipart/form-data">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />

    <!-- Order -->
    <div class="mb-3">
        <label asp-for="Order" class="form-label"></label>
        <input asp-for="Order" type="number" class="form-control" />
        <span asp-validation-for="Order" class="text-danger"></span>
    </div>

    <!-- Checkbox: TR'den otomatik oluştur -->
    <div class="form-check mb-3">
        <input asp-for="GenerateFromTurkish" class="form-check-input" type="checkbox" />
        <label asp-for="GenerateFromTurkish" class="form-check-label">
            Tüm dilleri ve slug'ları Türkçeden otomatik oluştur
        </label>
    </div>

    <!-- Sekmeli çeviri -->
    <ul class="nav nav-tabs" id="langTabs" role="tablist">
        @for (int i = 0; i < Model.Translations.Count; i++)
        {
            var t = Model.Translations[i];
            <li class="nav-item" role="presentation">
                <button class="nav-link @(i == 0 ? "active" : "")"
                        id="tab-@t.LangCode"
                        data-bs-toggle="tab"
                        data-bs-target="#pane-@t.LangCode"
                        type="button" role="tab">
                    @t.LangDisplay
                </button>
            </li>
        }
    </ul>

    <div class="tab-content border p-3">
        @for (int i = 0; i < Model.Translations.Count; i++)
        {
            var t = Model.Translations[i];
            <div class="tab-pane fade @(i == 0 ? "show active" : "")"
                 id="pane-@t.LangCode" role="tabpanel">
                <input type="hidden" asp-for="Translations[@i].LangId" />
                <input type="hidden" asp-for="Translations[@i].LangCode" />

                <div class="mb-3">
                    <label class="form-label">Kategori Adı (@t.LangDisplay)</label>
                    <input asp-for="Translations[@i].ValueText" class="form-control" />
                </div>

                <div class="mb-3">
                    <label class="form-label">Slug (@t.LangDisplay)</label>
                    <input asp-for="Translations[@i].Slug" class="form-control" />
                </div>
            </div>
        }
    </div>

    <!-- Kart Görseli -->
    <div class="mb-3">
        <label class="form-label">Kart Görseli (312×240)</label>
        @if (!string.IsNullOrEmpty(Model.ExistingCardImage))
        {
            <div class="mb-2">
                <img src="@Model.ExistingCardImage" alt="Kart Görseli" width="156" height="120" class="border" />
            </div>
        }
        <input asp-for="NewCardImage" type="file" accept=".jpg,.jpeg,.png,.webp" class="form-control"  />
        <span asp-validation-for="NewCardImage" class="text-danger"></span>
    </div>

    <!-- Vitrin Görseli -->
    <div class="mb-3">
        <label class="form-label">Vitrin Görseli (423×636)</label>
        @if (!string.IsNullOrEmpty(Model.ExistingShowcaseImage))
        {
            <div class="mb-2">
                <img src="@Model.ExistingShowcaseImage" alt="Vitrin Görseli" width="141" height="212" class="border" />
            </div>
        }
        <input asp-for="NewShowcaseImage" type="file" accept=".jpg,.jpeg,.png,.webp" class="form-control"  />
        <span asp-validation-for="NewShowcaseImage" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Güncelle</button>
    <a asp-action="Index" class="btn btn-secondary">İptal</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
