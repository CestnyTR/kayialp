@using kayialp.ViewModels
@model CompanyInfoVM
@{
    Layout = "/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Şirket Bilgileri";
}

<h2 class="mb-3">@ViewData["Title"]</h2>
@if (TempData["CompanyMsg"] != null) { <div class="alert alert-secondary">@TempData["CompanyMsg"]</div> }


<form asp-action="Company" method="post" enctype="multipart/form-data" class="card p-3">
    @Html.AntiForgeryToken()

    <div class="row g-3">
        <div class="col-md-6">
            <label class="form-label">Şirket Adı</label>
            <input asp-for="Name" class="form-control" />
        </div>
        <div class="col-md-6">
            <label class="form-label">Ticari Ünvan</label>
            <input asp-for="LegalName" class="form-control" />
        </div>

        <div class="col-md-4">
            <label class="form-label">Vergi No</label>
            <input asp-for="TaxNumber" class="form-control" />
        </div>
        <div class="col-md-4">
            <label class="form-label">Mersis No</label>
            <input asp-for="MersisNo" class="form-control" />
        </div>
        <div class="col-md-4">
            <label class="form-label">Website</label>
            <input asp-for="Website" class="form-control" />
        </div>

        <div class="col-md-6">
            <label class="form-label">Email</label>
            <input asp-for="Email" class="form-control" />
        </div>
        <div class="col-md-6">
            <label class="form-label">Email 2</label>
            <input asp-for="Email2" class="form-control" />
        </div>

        <div class="col-md-4">
            <label class="form-label">Telefon</label>
            <input asp-for="Phone" class="form-control" />
        </div>
        <div class="col-md-4">
            <label class="form-label">Telefon 2</label>
            <input asp-for="Phone2" class="form-control" />
        </div>
        <div class="col-md-4">
            <label class="form-label">Whatsapp</label>
            <input asp-for="Whatsapp" class="form-control" />
        </div>

        <div class="col-md-4">
            <label class="form-label">Fax</label>
            <input asp-for="Fax" class="form-control" />
        </div>
        <div class="col-md-4">
            <label class="form-label">Çalışma Saatleri</label>
            <input asp-for="WorkingHours" class="form-control" />
        </div>
    </div>

    <hr />

    <h5>Adres Bilgileri</h5>
    <div class="row g-3">
        <div class="col-md-4">
            <label class="form-label">Ülke</label>
            <input asp-for="Country" class="form-control" />
        </div>
        <div class="col-md-4">
            <label class="form-label">Şehir</label>
            <input asp-for="City" class="form-control" />
        </div>
        <div class="col-md-4">
            <label class="form-label">İlçe</label>
            <input asp-for="District" class="form-control" />
        </div>
        <div class="col-md-8">
            <label class="form-label">Adres</label>
            <input asp-for="AddressLine" class="form-control" />
        </div>
        <div class="col-md-4">
            <label class="form-label">Posta Kodu</label>
            <input asp-for="PostalCode" class="form-control" />
        </div>
        <div class="col-12">
            <label class="form-label">Harita Embed URL</label>
            <input asp-for="MapEmbedUrl" class="form-control" />
        </div>
    </div>

    <hr />

    <h5>Sosyal Medya</h5>
    <div class="row g-3">
        <div class="col-md-4">
            <label class="form-label">Facebook</label>
            <input asp-for="FacebookUrl" class="form-control" />
        </div>
        <div class="col-md-4">
            <label class="form-label">Twitter</label>
            <input asp-for="TwitterUrl" class="form-control" />
        </div>
        <div class="col-md-4">
            <label class="form-label">Instagram</label>
            <input asp-for="InstagramUrl" class="form-control" />
        </div>
        <div class="col-md-6">
            <label class="form-label">LinkedIn</label>
            <input asp-for="LinkedInUrl" class="form-control" />
        </div>
        <div class="col-md-6">
            <label class="form-label">YouTube</label>
            <input asp-for="YoutubeUrl" class="form-control" />
        </div>
    </div>

    <hr />

    <div class="col-12">
        <h5>Görseller</h5>
        <hr class="mt-0" />
    </div>
    <div class="col-md-6">
        <label class="form-label">Logo (öneri 400×400)</label>
        <input asp-for="Logo" type="file" class="form-control" />
        @if (!string.IsNullOrWhiteSpace(Model.LogoUrl))
        {
            <div class="mt-2">
                <img src="@Model.LogoUrl"
                    style="width:100px;height:100px;object-fit:contain;border:1px solid #eee;border-radius:6px" />
            </div>
        }
    </div>
    <div class="col-md-6">
        <label class="form-label">Mobil Logo (öneri 400×400)</label>
        <input asp-for="MobilLogo" type="file" class="form-control" />
        @if (!string.IsNullOrWhiteSpace(Model.MobilLogoUrl))
        {
            <div class="mt-2">
                <img src="@Model.MobilLogoUrl"
                    style="width:100px;height:100px;object-fit:contain;border:1px solid #eee;border-radius:6px" />
            </div>
        }
    </div>
    <div class="col-md-6">
        <label class="form-label">Icon (öneri 400×400)</label>
        <input asp-for="Icon" type="file" class="form-control" />
        @if (!string.IsNullOrWhiteSpace(Model.IconUrl))
        {
            <div class="mt-2">
                <img src="@Model.IconUrl"
                    style="width:100px;height:100px;object-fit:contain;border:1px solid #eee;border-radius:6px" />
            </div>
        }
    </div>


    <hr />

    <h5>Çok Dilli İçerikler</h5>
    <ul class="nav nav-tabs" id="langTabs" role="tablist">
        @for (int i = 0; i < Model.Langs.Count; i++)
        {
            var lcTab = Model.Langs[i].LangCode;
            <li class="nav-item" role="presentation">
                <button class="nav-link @(i == 0 ? "active" : "")" id="tab-@lcTab" data-bs-toggle="tab"
                    data-bs-target="#pane-@lcTab" type="button" role="tab">
                    @lcTab.ToUpperInvariant()
                </button>
            </li>
        }
    </ul>
    <div class="tab-content border p-3">
        @for (int i = 0; i < Model.Langs.Count; i++)
        {
            var lc = Model.Langs[i].LangCode;
            <div class="tab-pane fade @(i == 0 ? "show active" : "")" id="pane-@lc">
                <input type="hidden" name="Langs[@i].LangCode" value="@lc" />
                <div class="mb-3">
                    <label class="form-label">Hakkımızda</label>
                    <textarea name="Langs[@i].AboutHtml" class="form-control editor"
                    rows="4">@Model.Langs[i].AboutHtml</textarea>
                </div>
                <div class="mb-3">
                    <label class="form-label">Misyon</label>
                    <textarea name="Langs[@i].MissionHtml" class="form-control editor"
                    rows="4">@Model.Langs[i].MissionHtml</textarea>
                </div>
                <div class="mb-3">
                    <label class="form-label">Vizyon</label>
                    <textarea name="Langs[@i].VisionHtml" class="form-control editor"
                    rows="4">@Model.Langs[i].VisionHtml</textarea>
                </div>
            </div>
        }
    </div>

    <div class="mt-3 d-flex justify-content-end gap-2">
        <a href="/" class="btn btn-outline-secondary">İptal</a>
        <button type="submit" class="btn btn-primary">Kaydet</button>
    </div>
</form>


@section Scripts {

    <script>
        // WYSIWYG editör başlatmak için burayı kullanabilirsin
        // document.querySelectorAll('.editor').forEach(initYourEditor);
    </script>
}