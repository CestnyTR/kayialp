﻿@{
    Layout = "/Views/Shared/_AdminLayout.cshtml";
}
@model kayialp.ViewModels.AdminIndexViewModel

<h1 class="h3 mb-2 text-gray-800">Admin Paneli</h1>

<!-- Ürünler -->
<div class="card shadow mb-4">
    <div class="card-header py-3 d-flex justify-content-between align-items-center">
        <h6 class="m-0 font-weight-bold text-primary">Ürünler</h6>
        <a href="/admin/create-product" class="btn btn-success btn-icon-split">
            <span class="icon text-white-50"><i class="fas fa-check"></i></span>
            <span class="text">Ürün ekle</span>
        </a>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="ProductTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Görsel</th>
                        <th>Ürün adı</th>
                        <th>Kategori</th>
                        <th>Stok</th>
                        <th>Sıra</th>
                        <th>Slug</th>
                        <th>Güncelle</th>
                        <th>Sil</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>#</th>
                        <th>Görsel</th>
                        <th>Ürün adı</th>
                        <th>Kategori</th>
                        <th>Stok</th>
                        <th>Sıra</th>
                        <th>Slug</th>
                        <th>Güncelle</th>
                        <th>Sil</th>
                    </tr>
                </tfoot>
                <tbody>
                    @foreach (var item in Model.Products)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td style="width:90px">
                                @if (!string.IsNullOrWhiteSpace(item.FirstImageUrl))
                                {
                                    <div class="d-flex align-items-center">
                                        <img src="@item.FirstImageUrl" alt="thumb"
                                            style="width:64px;height:64px;object-fit:cover;border-radius:6px;border:1px solid #eee;" />
                                        @if (item.ImageCount > 1)
                                        {
                                            <span class="badge badge-secondary ml-2">+@((item.ImageCount - 1))</span>
                                        }
                                    </div>
                                }
                            </td>
                            <td>@item.Name</td>
                            <td>@item.CategoryName</td>
                            <td>@item.Stock</td>
                            <td>@item.Order</td>
                            <td><small>@item.Slug</small></td>
                            <td>
                                <a href="/admin/update-product/@item.Id" class="btn btn-info btn-circle">
                                    <i class="fas fa-edit"></i>
                                </a>
                            </td>
                            <td>
                                <form asp-action="DeleteProduct" asp-route-id="@item.Id" method="post"
                                    onsubmit="return confirm('Bu ürünü silmek istediğinize emin misiniz?');">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-danger btn-circle">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Kategoriler -->
<div class="card shadow mb-4">
    <div class="card-header py-3 d-flex justify-content-between align-items-center">
        <h6 class="m-0 font-weight-bold text-primary">Kategoriler</h6>
        <a href="/admin/create-category" class="btn btn-success btn-icon-split">
            <span class="icon text-white-50"><i class="fas fa-check"></i></span>
            <span class="text">Yeni Kategori Ekle</span>
        </a>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="CategoryTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Kategori Adı</th>
                        <th>Güncelle</th>
                        <th>Sil</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>#</th>
                        <th>Kategori Adı</th>
                        <th>Güncelle</th>
                        <th>Sil</th>
                    </tr>
                </tfoot>
                <tbody>
                    @foreach (var item in Model.Categories)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.Name</td>
                            <td>
                                <a href="/admin/update-category/@item.Id" class="btn btn-info btn-circle">
                                    <i class="fas fa-edit"></i>
                                </a>
                            </td>
                            <td>
                                <form asp-action="DeleteCategory" asp-route-id="@item.Id" method="post"
                                    onsubmit="return confirm('Bu kategoriyi silmek istediğinize emin misiniz?');">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-danger btn-circle">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/admin/jquery.dataTables.min.js"></script>
    <script src="~/js/admin/dataTables.bootstrap4.min.js"></script>
    <script>
        $(function () {
            $('#ProductTable').DataTable();
            $('#CategoryTable').DataTable();
        });
    </script>
}
