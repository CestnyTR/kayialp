@{
    ViewData["Title"] = "Home Page";
}
<!--======== / Hero Section ========-->
@await Component.InvokeAsync("Slider")

<!--==============================
Feature Area
==============================-->
<section class="">
    <div class="feature-list-wrap">
        <div class="feature-area overflow-hidden " id="feature-area">
            <div class="row gx-0 justify-content-center">
                <div class="col-xl-4 col-lg-6">
                    <div class="feature-item d-flex align-items-start">
                        <div class="feature-item_icon">
                            <img src="/img/icon/feature_1_1.svg" alt="icon">
                        </div>
                        <div class="media-body">
                            <h3 class="box-title text-anime-style-2">
                                @Html.Localize("pages.home.advantages_item1_title")
                            </h3>
                            <p class="feature-item_text wow fadeInUp">
                                @Html.Localize("pages.home.advantages_item1_desc")
                            </p>
                        </div>
                    </div>
                </div>
                <div class="col-xl-4 col-lg-6">
                    <div class="feature-item d-flex align-items-start">
                        <div class="feature-item_icon">
                            <img src="/img/icon/feature_1_2.svg" alt="icon">
                        </div>
                        <div class="media-body">
                            <h3 class="box-title text-anime-style-2">
                                @Html.Localize("pages.home.advantages_item2_title")
                            </h3>
                            <p class="feature-item_text">
                                @Html.Localize("pages.home.advantages_item2_desc")

                            </p>
                        </div>
                    </div>
                </div>
                <div class="col-xl-4 col-lg-6">
                    <div class="feature-item d-flex align-items-start">
                        <div class="feature-item_icon">
                            <img src="/img/icon/feature_1_3.svg" alt="icon">
                        </div>
                        <div class="media-body">
                            <h3 class="box-title text-anime-style-2">
                                @Html.Localize("pages.home.advantages_item3_title")
                            </h3>
                            <p class="feature-item_text">
                                @Html.Localize("pages.home.advantages_item3_desc")

                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!--==============================
Category Area
==============================-->
@await Component.InvokeAsync("Advantages")

<!--==============================
About Area
==============================-->
<div class="about-area position-relative overflow-hidden " id="about-sec">
    <div class="container">
        <div class="row">
            <div class="col-xl-6">
                <div class="img-box1">
                    <div class="img1">
                        <img src="/img/normal/about_1_1.jpg" alt="About">
                    </div>
                    <div class="img2">
                        <img src="/img/normal/about_1_2.jpg" alt="About">
                    </div>
                    <div class="img3">
                        <img src="/img/normal/about_1_3.jpg" alt="About">
                    </div>
                </div>
            </div>
            <div class="col-xl-6">
                <div class="ps-xl-4 ms-xxl-4">
                    <div class="title-area about1-title-box mb-20 pe-xxl-5 me-xxl-5">
                        <span
                            class="sub-title style1 text-anime-style-2">@Html.Localize("pages.home.about_section_subtitle")</span>
                        <h2 class="sec-title mb-20 heading text-anime-style-3">
                            @Html.Localize("pages.home.about_section_title")
                        </h2>

                        <p class="sec-text mb-30 wow fadeInUp" data-wow-delay=".1s">
                            @Html.Localize("pages.home.about_section_paragraph")

                        </p>
                    </div>
                    <div class="about-item-wrap">
                        <div class="about-item wow fadeInUp" data-wow-delay=".3s">
                            <div class="about-item_img"><img src="/img/icon/map3.svg" alt=""></div>
                            <div class="about-item_centent">
                                <h5 class="box-title">@Html.Localize("pages.home.about_item1_title")</h5>
                                <p class="about-item_text">
                                    @Html.Localize("pages.home.about_item1_desc")
                                </p>
                            </div>
                        </div>
                        <div class="about-item wow fadeInUp" data-wow-delay=".5s">
                            <div class="about-item_img"><img src="/img/icon/guide.svg" alt=""></div>
                            <div class="about-item_centent">
                                <h5 class="box-title">@Html.Localize("pages.home.about_item2_title")</h5>
                                <p class="about-item_text">
                                    @Html.Localize("pages.home.about_item2_desc")
                                </p>
                            </div>
                        </div>
                    </div>
                    <div class="mt-35 wow fadeInUp">
                        <a asp-controller="About" asp-action="Index" asp-route-culture="@ViewData["Culture"]"
                            asp-route-slug="@Html.Localize("pages.layout.about.slug")"
                            class="th-btn th-icon">@Html.Localize("pages.home.about_cta_text") <i
                                class="fa-light fa-arrow-right-long"></i></a>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>
<!--==============================
destination Area
==============================-->
@await Component.InvokeAsync("CategoryTabs")

<!--==============================
Servce Area
==============================-->
@await Component.InvokeAsync("BlogShowcase")